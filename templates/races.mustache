<div id="mod_mathtournament" class="races">
    <h3>{{#str}} races_in_tournament, mathtournament {{/str}}</h3>
    <table class="generaltable">
    {{#races}}
        <tr class="race-{{id}}">
            <td width="50">
                #{{nr}}
                {{#btnjoin}}
                <br />
                <a href="{{baseurl}}&join={{raceid}}" class="btn btn-primary btn-block">
                    join
                </a>
                {{/btnjoin}}
            </td>
            <td>
                <table class="generaltable">
                {{#scores}}
                    <tr class="race-{{raceid}}-user-{{userid}}">
                        <td>{{firstname}}</td>
                        <td>{{lastname}}</td>
                        <td>{{points}} / 100</td>
                        <td>
                            {{#isonline}}
                                <span class="online">online</span>
                            {{/isonline}}
                            {{#isoffline}}
                                <span class="offline">offline</span>
                            {{/isoffline}}
                        </td>
                    </tr>
                {{/scores}}
                </table>
            </td>
        </tr>
    {{/races}}
    </table>

    <a href="{{baseurl}}&action=startrace" class="btn btn-primary">
        Start new race
    </a>


</div>
